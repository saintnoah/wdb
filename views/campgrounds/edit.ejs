<% include ../partials/header%>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= data.name %></h1>
        <div style="width: 30%; margin: 25px auto;">   
            <form action="/campgrounds/<%= data._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="data[name]" value=<%= data.name %>></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="data[image]" value=<%= data.image %>></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="data[description]" value=<%= data.description %>></input>
                </div>                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block ">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Back to Campgrounds</a>
        </div>
        
    </div>
</div>


<% include ../partials/footer%>
